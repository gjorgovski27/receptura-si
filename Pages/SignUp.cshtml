@page
@model CookingAssistantAPI.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Sign Up Specific CSS -->
    <link href="/css/signup.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
</head>
<body>
    <div class="card">
        <div class="card-header">
            Sign Up
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Submit">
                <!-- Username Field -->
                <div class="mb-3">
                    <input type="text" id="UserName" name="UserName" class="form-control" asp-for="UserName" placeholder="Username" required />
                </div>

                <!-- Full Name Field -->
                <div class="mb-3">
                    <input type="text" id="FullName" name="UserFullName" class="form-control" asp-for="UserFullName" placeholder="Name" required />
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <input type="email" id="Email" name="UserEmail" class="form-control" asp-for="UserEmail" placeholder="E-mail" required />
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <input type="password" id="Password" name="UserPassword" class="form-control" asp-for="UserPassword" placeholder="Password" required />
                </div>

                <!-- Phone Number Field -->
                <div class="mb-3">
                    <input type="tel" id="Phone" name="UserPhone" class="form-control" asp-for="UserPhone" placeholder="Phone Number" required />
                </div>

                <!-- Sign Up Button -->
                <button type="submit" class="btn btn-primary w-100">SIGN UP</button>
            </form>

            <!-- Log-In Link -->
            <p class="text-muted mt-3 text-center">
                Already have an account? <a href="/Login">Log in</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
