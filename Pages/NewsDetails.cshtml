@page "{articleId:int}"
@model CookingAssistantAPI.Pages.NewsDetailsModel
@{
    ViewData["Title"] = "News Details";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- News Details Specific CSS -->
    <link href="/css/newsdetails.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5">
        <!-- News Title -->
        <div class="mb-2 text-center">
            <h2>@Model.News.ArticleDescription</h2>
        </div>

        <!-- Published Date and Written By -->
        <div class="d-flex justify-content-between mb-4">
            <div class="text-muted">
                <small>Published on @Model.News.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
            </div>
            <div class="text-muted">
                <small>Written by <span class="brand-name">Receptura.si</span></small>
            </div>

        </div>

        <!-- News Image -->
        <div class="text-center mb-4">
            <img src="/api/news/@Model.News.ArticleId/image" class="img-fluid rounded" alt="@Model.News.ArticleDescription image">
        </div>

        <!-- News Content -->
        <div class="mb-4">
            <h4>Content</h4>
            <div>
                @foreach (var paragraph in Model.News.ArticleContent.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries))
                {
                    <p>@paragraph</p>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
