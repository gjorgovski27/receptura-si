@page "{userId:int}"
@model CookingAssistantAPI.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Home Specific CSS -->
    <link href="/css/profile.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Your Profile</h2>
        <div class="card" style="max-width: 500px;">
            <div class="profile-card">
                <div class="profile-field"><strong>Full Name:</strong> @Model.User.UserFullName</div>
                <div class="profile-field"><strong>Username:</strong> @Model.User.UserName</div>
                <div class="profile-field"><strong>Email:</strong> @Model.User.UserEmail</div>
                <div class="profile-field"><strong>Phone:</strong> @Model.User.UserPhone</div>
                <div class="profile-field"><strong>Birthdate:</strong> @Model.User.UserBirthdate.ToString("yyyy-MM-dd")</div>
            </div>
        </div>
    </div>
</body>
</html>
